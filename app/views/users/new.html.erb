<% provide(:title, 'Sign up') %>
<div class="signUp">
<h1>Sign up</h1>
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
	<BR>
      <%= f.submit "Create my account", class: "button" %>
    <% end %>
</div>